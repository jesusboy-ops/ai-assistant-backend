# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URLs (add your frontend URLs here)
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Additional allowed origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173,https://yourdomain.com

# Production Frontend URLs (update with your deployed frontend)
# CLIENT_URL=https://your-frontend-app.vercel.app
# FRONTEND_URL=https://your-frontend-app.netlify.app
# CLIENT_URL=https://yourdomain.com

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Supabase (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
# Alternative: Use anon key if service key not available
# SUPABASE_ANON_KEY=your-anon-key

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/oauth/google/callback

# Email (SendGrid)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=
EMAIL_FROM=

# Redis (Optional - for caching and job queues)
REDIS_URL=redis://localhost:6379
# For Render Redis: redis://red-xxxxxxxxxxxxx:6379
# Set to 'true' to disable Redis completely
# DISABLE_REDIS=true

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d

# OpenAI GPT API
OPENAI_API_KEY=

# Web Push (VAPID keys - leave empty to auto-generate)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
