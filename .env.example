# ===== SMART AI PERSONAL ASSISTANT BACKEND =====
# Long-term production configuration
# Copy this file to .env and update with your actual values

# ===== SERVER CONFIGURATION =====
PORT=5000
NODE_ENV=production
HOST=0.0.0.0

# ===== FRONTEND URLS (Add ALL your domains here for CORS) =====
CLIENT_URL=http://localhost:3000
FRONTEND_URL=https://yourapp.vercel.app
PRODUCTION_URL=https://yourapp.com
STAGING_URL=https://staging.yourapp.com
DEVELOPMENT_URL=http://localhost:3000

# Custom domains (add as many as needed for long-term use)
CUSTOM_DOMAIN_1=https://app.yourdomain.com
CUSTOM_DOMAIN_2=https://dashboard.yourdomain.com
CUSTOM_DOMAIN_3=https://admin.yourdomain.com

# ===== DATABASE (REQUIRED) =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# ===== AI SERVICES (REQUIRED) =====
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===== SECURITY (REQUIRED) =====
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# ===== EMAIL SERVICE (OPTIONAL) =====
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your App Name

# ===== FILE STORAGE (OPTIONAL) =====
# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===== CACHING & QUEUES (OPTIONAL) =====
# Redis (for background jobs and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DISABLED=false

# ===== OAUTH (OPTIONAL) =====
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/oauth/google/callback

# ===== PUSH NOTIFICATIONS (OPTIONAL) =====
# VAPID keys (auto-generated if not provided)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:your-email@domain.com

# ===== RATE LIMITING (OPTIONAL) =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== LOGGING & MONITORING (OPTIONAL) =====
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# ===== FEATURE FLAGS (OPTIONAL) =====
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_FEATURES=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_BACKGROUND_JOBS=true

# ===== DEPLOYMENT SPECIFIC =====
# Render.com
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Heroku
HEROKU_APP_NAME=your-heroku-app

# Railway
RAILWAY_STATIC_URL=https://your-app.railway.app

# Vercel (for serverless functions)
VERCEL_URL=https://your-app.vercel.app

# Fly.io
FLY_APP_NAME=your-fly-app

# ===== CUSTOM CONFIGURATION =====
# Add any custom environment variables your app needs
CUSTOM_API_ENDPOINT=https://api.yourservice.com
CUSTOM_SECRET_KEY=your-custom-secret
CUSTOM_FEATURE_FLAG=enabled

# ===== LONG-TERM MAINTENANCE =====
# Version tracking
API_VERSION=1.0.0
LAST_UPDATED=2024-12-29

# Backup and monitoring
BACKUP_ENABLED=true
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=300000